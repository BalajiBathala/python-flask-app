pipeline {
    agent any
    environment {
        AWS_REGION = 'us-east-2' // Update this to your AWS region
        ECS_CLUSTER = 'flask-cluster' // Replace with your ECS cluster name
        ECS_SERVICE = 'flask-service' // Replace with your ECS service name
        DOCKER_IMAGE = 'balajibathala12/flask-app' // Replace with your Docker Hub image (e.g., balajibathala/flask-app)
    }
    stages {
        stage('Code Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy to ECS') {
            steps {
                script {
                    // Ensure AWS CLI uses the configured credentials on the server
                    sh '''
                    aws configure set region $AWS_REGION

                    aws ecs register-task-definition \
                        --family flask-app \
                        --network-mode bridge \
                        --container-definitions '[{
                            "name": "flask-app",
                            "image": "'"$DOCKER_IMAGE"'",
                            "memory": 512,
                            "cpu": 256,
                            "essential": true,
                            "portMappings": [{"containerPort": 5001, "hostPort": 5001}]
                        }]'

                    aws ecs update-service \
                        --cluster $ECS_CLUSTER \
                        --service $ECS_SERVICE \
                        --force-new-deployment
                    '''
                }
            }
        }
    }
}
